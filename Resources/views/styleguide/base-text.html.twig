{% import _self as self %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <link rel="stylesheet" href="/bundles/massivestyleguide/css/base-text.css">
    {% block style %}{% endblock %}

    <style>
        {% set frameWidth = frameWidth|default(360) %}
        {% set containerHeight = containerHeight|default(100) %}

        body {
            width: {{ frameWidth }}px !important;
        }

        .styleguide-container {
            height: {{ containerHeight }}px;
        }
    </style>
</head>
<body>
    <div data-sketch-download>
        <a class="styleguide-download-full">
            <img src="/bundles/massivestyleguide/images/sketch.svg" alt="Sketch">
            <div>Download</div>
        </a>

        <!-- Text -->
        {% block text %}
            <div class="styleguide-container" style="height: 600px">
                <!-- Paragraphs -->
                <p>
                    This is a <br>
                    basic text with a break.
                </p>

                <p>
                    <strong>Bold</strong>
                    <em>Italic</em>
                    <sup>Sup</sup>
                    <s>Strike</s>
                    <sub>Sub</sub>
                    <a href="#">Link</a>
                </p>

                <p>
                    This is another <br>
                    paragraph.
                </p>

                <!-- Unordered List -->
                <ul>
                    <li>
                        Unordered List
                    </li>

                    <li>
                        Unordered List
                        <ul>
                            <li>
                                Unordered List<br>
                                with break
                            </li>

                            <li>
                                Unordered List
                            </li>
                        </ul>
                    </li>

                    <li>
                        Unordered List<br>
                        with break
                    </li>
                </ul>

                <!-- Ordered List -->
                <ol>
                    <li>
                        Ordered List
                    </li>

                    <li>
                        Ordered List
                        <ol>
                            <li>
                                Ordered List
                            </li>

                            <li>
                                Ordered<br>
                                List
                            </li>
                        </ol>
                    </li>

                    <li>
                        Ordered<br>
                        List
                    </li>
                </ol>
            </div>
        {% endblock %}

        {% block colors %}
            <!-- Colors -->
            <div class="styleguide-sub-title">
                Text colors
            </div>

            <div id="colors" class="styleguide-colors">

            </div>
        {% endblock %}

        {% block fontFamilies %}
            <!-- Colors -->
            <div class="styleguide-sub-title">
                Font Families
            </div>

            <div id="font-families" class="styleguide-font-families">

            </div>
        {% endblock %}

        {% block headlines %}
            <!-- Headlines -->
            <div class="styleguide-sub-title">
                Headlines
            </div>

            {% block h1 %}
                <div class="styleguide-container styleguide-container--h1">
                    <h1>
                        Headline H1<br/>
                        with a break
                    </h1>
                </div>
            {% endblock %}

            {% block h2 %}
                <div class="styleguide-container styleguide-container--h2">
                    <h2>
                        Headline H2<br/>
                        with a break
                    </h2>
                </div>
            {% endblock %}

            {% block h3 %}
                <div class="styleguide-container styleguide-container--h3">
                    <h3>
                        Headline H3<br/>
                        with a break
                    </h3>
                </div>
            {% endblock %}

            {% block h4 %}
                <div class="styleguide-container styleguide-container--h4">
                    <h4>
                        Headline H4<br/>
                        with a break
                    </h4>
                </div>
            {% endblock %}

            {% block h5 %}
                <div class="styleguide-container styleguide-container--h5">
                    <h5>
                        Headline H5<br/>
                        with a break
                    </h5>
                </div>
            {% endblock %}

            {% block h6 %}
                <div class="styleguide-container styleguide-container--h6">
                    <h6>
                        Headline H6<br/>
                        with a break
                    </h6>
                </div>
            {% endblock %}

            {% for element in elements.Headlines|default([]) %}
                {{ self.element(element) }}
            {% endfor %}
        {% endblock %}

        {% block icons %}
            {% if icons|default([])|length %}
                <!-- Icons -->
                <div class="styleguide-sub-title">
                    Icons
                </div>

                {% for fontSize in [16, 32, 48] %}
                    <div class="styleguide-container" style="font-size: {{ fontSize }}px;line-height: 1.1;height: auto;">
                        <div>
                            {% for icon in icons %}
                                <span class="icon-{{ icon }}" title="{{ icon }}"></span>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        {% endblock %}

        {% block forms %}
            <!-- Form -->
            <div class="styleguide-sub-title">
                Forms
            </div>

            {% block input %}
                <div class="styleguide-container styleguide-container--input">
                    <div>
                        <label for="text-input">Base Input</label>
                        <input id="text-input" type="text" />
                    </div>
                </div>
            {% endblock %}

            {% block checkbox %}
                <div class="styleguide-container styleguide-container--checkbox">
                    <div>
                        <input id="checkbox-input" type="checkbox" />
                        <label for="checkbox-input">Base Checkbox</label>
                    </div>
                </div>
            {% endblock %}

            {% block radio %}
                <div class="styleguide-container styleguide-container--radio">
                    <div>
                        <div>
                            <input id="radio-input-1" type="radio" name="radio" />
                            <label for="radio-input-1">Base Radio 1</label>
                        </div>

                        <div>
                            <input id="radio-input-2" type="radio" name="radio" />
                            <label for="radio-input-2">Base Radio 2</label>
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% block select %}
                <div class="styleguide-container styleguide-container--select">
                    <div>
                        <label for="select-input">Base Select</label>

                        <select id="select-input">
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                        </select>
                    </div>
                </div>
            {% endblock %}

            {% block textarea %}
                <div class="styleguide-container styleguide-container--textarea">
                    <div>
                        <label for="textarea-input">Base Textarea</label>

                        <textarea id="textarea-input"></textarea>
                    </div>
                </div>
            {% endblock %}

            {% for element in elements.Forms|default([]) %}
                {{ self.element(element) }}
            {% endfor %}
        {% endblock %}

        {% block elements %}
            {% for group, elements in elements|default([]) if group not in ['Forms', 'Headlines'] %}
                <div class="styleguide-sub-title">
                    {{- group -}}
                </div>

                {% for element in elements %}
                    {{ self.element(element) }}
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block content %}{% endblock %}
    </div>

    {% block script %}{% endblock %}

    <script>
        var stringToColor = function(str) {
            var hash = 0;
            for (var i = 0; i < str.length; i++) {
                hash = str.charCodeAt(i) + ((hash << 5) - hash);
            }

            var color = '#';

            for (var i = 0; i < 3; i++) {
                var value = (hash >> (i * 8)) & 0xFF;
                color += ('00' + value.toString(16)).substr(-2);
            }

            return color;
        };

        var rgb2hex = function (rgb) {
            rgb = rgb.match(/^rgb\((\d+),\s*(\d+),\s*(\d+)\)$/);
            function hex(x) {
                return ("0" + parseInt(x).toString(16)).slice(-2);
            }
            return "#" + hex(rgb[1]) + hex(rgb[2]) + hex(rgb[3]);
        };

        var colors = [];
        var fontFamilies = [];

        var $styleguideContainer = $('.styleguide-container');

        $styleguideContainer.each(function(i) {
            var $element = $(this).find('*').last();
            var $styleGuideIdenticator = $('<div/>');
            var styles = '';
            var color = rgb2hex($element.css('color'));
            var fontFamily = $element.css('font-weight') + ' ' +$element.css('font-family');

            if (colors.indexOf(color) === -1) {
                colors.push(color);
            }

            if (fontFamilies.indexOf(fontFamily) === -1) {
                fontFamilies.push(fontFamily);
            }

            styles += 'color:          ' +  color + "\n";
            styles += 'font-family:    ' +  $element.css('font-family') + "\n";
            styles += 'font-size:      ' +  $element.css('font-size') + "\n";
            styles += 'line-height:    ' +  $element.css('line-height') + "\n";
            styles += 'font-weight:    ' +  $element.css('font-weight') + "\n";
            styles += 'font-style:     ' +  $element.css('font-style') + "\n";
            styles += 'letter-spacing: ' +  $element.css('letter-spacing');

            var backgroundColor = stringToColor(
                styles.replace('color:         ', '')
                    .replace('font-family:    ', '')
                    .replace('font-size:     ', '')
                    .replace('line-height:     ', '')
                    .replace('font-weight:     ', '')
                    .replace('font-style:     ', '')
                    .replace('letter-spacing: ', '')
            );

            $styleGuideIdenticator.css('backgroundColor', backgroundColor);
            $styleGuideIdenticator.addClass('styleguide-identicator');
            $styleGuideIdenticator.attr('data-styles', styles);

            if ($(this).find('.hide-desktop').length) {
                $styleGuideIdenticator.addClass('hide-desktop');
            } else if ($(this).find('.hide-mobile').length) {
                $styleGuideIdenticator.addClass('hide-mobile');
            }

            $(this).append($styleGuideIdenticator);
        });

        colors.sort();

        $.each(colors, function(key, value) {
            var $color = $('<div/>');
            $color.text(value);
            $color.addClass('styleguide-color');
            $color.css('backgroundColor', value);

            $('#colors').append($color);
        });

        $.each(fontFamilies, function(key, value) {
            var fontWeight = value.substr(0, value.indexOf(' '));
            var fontFamily = value.substr(value.indexOf(' ') + 1);
            var $fontFamily = $('<div/>');
            $fontFamily.text(fontFamily + ' (' + fontWeight + ')');
            $fontFamily.addClass('styleguide-font-family');
            $fontFamily.css('font-family', fontFamily);
            $fontFamily.css('font-weight', fontWeight);

            $('#font-families').append($fontFamily);
        });

        $styleguideContainer.attr('data-sketch-download', true);
        $styleguideContainer.append('<a class="styleguide-download"></a>');
    </script>

    <script src="/bundles/massivestyleguide/js/main.js"></script>
</body>
</html>

{% macro element(element) %}
    <div class="styleguide-container{% if element.container is defined %} styleguide-container--{{ element.container }}{% endif %}">
        {%- if element.description is defined -%}
            {{- element.description -}}:<br/>
        {%- endif -%}

        {% if element.tag in ['input'] %}
            <{{ element.tag }} class="{{ element.class }}" type="text" value="{{- element.text -}}">
        {% elseif element.tag in ['select'] %}
            <{{ element.tag }} class="{{ element.class }}">
            <option>{{- element.text -}}</option>
            </{{ element.tag }}>
        {% else %}
            <{{ element.tag }} class="{{ element.class }}">
            {{- element.text -}}
            {%- if element.break|default -%}<br/>with break{%- endif -%}
            </{{ element.tag }}>
        {% endif %}
    </div>
{% endmacro %}
